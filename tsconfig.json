{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@plugins/*": ["src/plugins/*"],
      "@app/*": ["src/studio/*"]
    },
    "types": ["jest", "node", "@types/three"],
    "lib": ["es2020", "dom"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "jest.setup.ts",
    "vite.config.ts"
  ]
}
