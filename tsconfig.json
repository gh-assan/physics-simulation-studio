{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@core/*": ["src/core/*"],
      "@plugins/*": ["src/plugins/*"],
      "@studio/*": ["src/studio/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"]
}
